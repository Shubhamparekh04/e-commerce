<!-- Add Sub-Category Form -->
<div class="card shadow-sm mb-4 border-0">
  <div class="card-header bg-light">
    <h5 class="mb-0 text-dark fw-semibold">Add Sub-Category</h5>
  </div>
  <div class="card-body">
    <form action="/mySubCat/createSubCat" method="POST">
      <input type="hidden" name="id" value="" />

      <div class="mb-3">
        <label for="categoryId" class="form-label">Select Category</label>
        <select name="categoryId" id="categoryId" class="form-select" required>
          <option selected disabled>Select Category</option>
          <% catData.forEach((cat) => { %>
            <option value="<%= cat.id %>"><%= cat.name %></option>
          <% }) %>
        </select>
      </div>

      <div class="mb-3">
        <label for="subCatName" class="form-label">Sub-Category Name</label>
        <input type="text" name="name" id="subCatName" class="form-control" placeholder="Enter sub-category name" required />
      </div>

      <button type="submit" class="btn btn-info text-white">Add Sub-Category</button>
    </form>
  </div>
</div>

<!-- Sub-Category List Table -->
<div class="card shadow-sm border-0">
  <div class="card-header bg-light">
    <h5 class="mb-0 text-dark fw-semibold">Sub-Category List</h5>
  </div>
  <div class="card-body p-0">
    <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
      <table class="table table-striped table-hover text-center align-middle mb-0">
        <thead class="table-dark">
          <tr>
            <th class="text-white">#</th>
            <th class="text-white">Category</th>
            <th class="text-white">Sub Category</th>
            <th class="text-white">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% subCatData.forEach((subCat, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= subCat.categoryId ? subCat.categoryId.name : "No Category" %></td>
              <td><%= subCat.name %></td>
              <td>
                <a href="/mySubCat/delete/<%= subCat.id %>" class="btn btn-outline-danger btn-sm">Delete</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

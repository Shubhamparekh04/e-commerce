<form action="/mySubCat/createSubCat" method="POST">
  <input type="hidden" name="id" value="" />

  <label>Select Category</label>

  <select name="categoryId" required>
    <option selected disabled>Select Catagory</option>

    <%catData.forEach((cat)=>{ %>
    <option value="<%=cat.id%>"><%=cat.name%></option>
    <% })%>
  </select>

  <label>Sub-Category Name</label>
  <input type="text" name="name" value="" required />

  <button type="submit" class="btn btn-primary btn-sm">Add</button>
</form>

<!-- Table view for sub-categories -->

<!-- TABLE TO SHOW & DELETE -->
<table class="table mt-4">
  <thead>
    <tr>
      <th>#</th>
      <th>Sub Category</th>
      <th>Category</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% subCatData.forEach((subCat, index) => { %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= subCat.name %></td>
      <td><%= subCat.categoryId ? subCat.categoryId.name : "No Category" %></td>
      <td>
        <a
          href="/mySubCat/delete/<%= subCat.id %>"
          class="btn btn-danger btn-sm"
          >Delete</a
        >
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>

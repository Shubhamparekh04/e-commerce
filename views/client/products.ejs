    <!-- Custom Styles -->
    <style>
      body {
        background-color: #f8f9fa;
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
      }

      .navbar {
        background-color: #2874f0 !important;
      }

      .navbar .navbar-brand,
      .navbar .nav-link {
        color: #fff !important;
        font-size: 18px;
      }

      .navbar .dropdown-menu {
        background-color: #fff;
      }

      .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: none;
        border-radius: 1rem;
      }

      .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
      }

      .img-wrapper {
        aspect-ratio: 4 / 3;
        overflow: hidden;
        background-color: #f0f0f0;
        border-top-left-radius: 1rem;
        border-top-right-radius: 1rem;
      }

      .img-wrapper img {
        height: 100%;
      }

      .card-title {
        font-size: 1rem;
        font-weight: 600;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
      }

      .card-text {
        font-size: 0.9rem;
        color: #555;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
      }

      .badge {
        font-size: 12px;
        padding: 5px 10px;
      }

      .btn-view {
        background-color: #ff9f00;
        color: #fff;
        font-weight: 500;
      }

      .btn-view:hover {
        background-color: #fb8c00;
      }
    </style>
  </head>

  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg px-3">
      <a class="navbar-brand fw-bold" href="/">Flipkart</a>
      <div class="collapse navbar-collapse">
        <form class="d-flex w-50 mx-3">
          <input
            class="form-control me-2"
            type="search"
            placeholder="Search for Products, Brands and More"
          />
        </form>
        <ul class="navbar-nav ms-auto">
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <i class="bi bi-person-circle me-1"></i> Shubham
            </a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
              <li><a class="dropdown-item" href="#">Profile</a></li>
              <li><a class="dropdown-item" href="#">Logout</a></li>
            </ul>
          </li>
          <li class="nav-item">
            <a class="nav-link d-flex align-items-center" href="#"><i class="bi bi-cart4 me-1"></i> Cart</a>
          </li>
        </ul>
      </div>
    </nav>

    <!-- Product Cards Section -->
    <div class="container mt-5">
      <h3 class="mb-4 text-primary fw-bold">
        <%= extraData[0]?.subcategoryId?.name || 'Subcategory' %> Products
      </h3>
      <div class="row">
        <% if (extraData.length > 0) { %>
          <% extraData.forEach(extra => { %>
            <div class="col-sm-6 col-md-4 col-lg-3 mb-4 d-flex align-items-stretch">
              <div class="card shadow w-100">
                <div class="img-wrapper">
                  <a href="/extra/view/<%= extra._id %>">
                    <img
                      src="/uploads/<%= extra.image %>"
                      alt="<%= extra.name %>"

                      class="d-block mx-auto"
                    />
                  </a>
                </div>
                <div class="card-body d-flex flex-column">
                  <h5 class="card-title text-primary" title="<%= extra.name %>">
                    <%= extra.name %>
                  </h5>
                  <p class="card-text text-muted" title="<%= extra.description %>">
                    <%= extra.description %>
                  </p>
                  <% if (extra.subcategoryId && extra.subcategoryId.name) { %>
                    <span class="badge bg-secondary mb-2 align-self-start">
                      <%= extra.subcategoryId.name %>
                    </span>
                  <% } %>
                  <a
                    href="/product/<%= extra._id %>"
                    class="btn btn-view mt-auto shadow-sm"
                  >
                    View Details
                  </a>
                </div>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <div class="col-12">
            <p class="text-muted text-center mt-4">
              No extra categories found for this subcategory.
            </p>
          </div>
        <% } %>
      </div>
    </div>



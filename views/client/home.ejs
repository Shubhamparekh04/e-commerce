<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Flipkart Clone</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      .category img {
        width: 40px;
        height: 40px;
      }
      .banner {
        background: #1976d2;
        color: white;
        padding: 40px 20px;
        text-align: center;
        position: relative;
      }
      .banner img {
        max-height: 300px;
      }
      .electronics img {
        width: 100%;
        max-height: 150px;
        object-fit: contain;
      }
    </style>
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light px-3">
      <a class="navbar-brand fw-bold text-primary" href="#"
        >Flipkart <span class="text-warning">Explore Plus</span></a
      >
      <div class="collapse navbar-collapse">
        <form class="d-flex w-50 mx-3">
          <input
            class="form-control me-2"
            type="search"
            placeholder="Search for Products, Brands and More"
          />
        </form>
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="#">Shubham</a></li>
          <li class="nav-item"><a class="nav-link" href="#">Cart</a></li>
          <li class="nav-item">
            <a class="nav-link" href="#">Become a Seller</a>
          </li>
        </ul>
      </div>
    </nav>

    <!-- Categories -->
    <div class="container-fluid bg-white py-3">
      <div class="row text-center">
        <div class="col category">
          <img src="https://via.placeholder.com/40" alt="" />
          <div>Kilos</div>
        </div>
        <div class="col category">
          <img src="https://via.placeholder.com/40" alt="" />
          <div>Mobiles</div>
        </div>
        <div class="col category">
          <img src="https://via.placeholder.com/40" alt="" />
          <div>Fashion</div>
        </div>
        <div class="col category">
          <img src="https://via.placeholder.com/40" alt="" />
          <div>Electronics</div>
        </div>
        <div class="col category">
          <img src="https://via.placeholder.com/40" alt="" />
          <div>Home & Furniture</div>
        </div>
        <div class="col category">
          <img src="https://via.placeholder.com/40" alt="" />
          <div>Appliances</div>
        </div>
        <div class="col category">
          <img src="https://via.placeholder.com/40" alt="" />
          <div>Flight Bookings</div>
        </div>
        <div class="col category">
          <img src="https://via.placeholder.com/40" alt="" />
          <div>Beauty & More</div>
        </div>
        <div class="col category">
          <img src="https://via.placeholder.com/40" alt="" />
          <div>Two Wheelers</div>
        </div>
      </div>
    </div>

    <!-- Banner -->
    <div class="banner">
      <div class="row align-items-center">
        <div class="col-md-6">
          <h3>Office Chairs<br /><strong>From â‚¹2,999</strong></h3>
          <p>Green Soul, Cell Bell & more</p>
        </div>
        <div class="col-md-6">
          <img
            src="https://via.placeholder.com/300x300"
            alt="Office Chair"
            class="img-fluid"
          />
        </div>
      </div>
    </div>

    <!-- Electronics Section -->
    <div class="container my-4">
      <h4 class="mb-3">Best of Electronics</h4>
      <div class="row text-center electronics">
        <div class="col-6 col-md-2">
          <img src="https://via.placeholder.com/150" alt="Product 1" />
        </div>
        <div class="col-6 col-md-2">
          <img src="https://via.placeholder.com/150" alt="Product 2" />
        </div>
        <div class="col-6 col-md-2">
          <img src="https://via.placeholder.com/150" alt="Product 3" />
        </div>
        <div class="col-6 col-md-2">
          <img src="https://via.placeholder.com/150" alt="Product 4" />
        </div>
        <div class="col-6 col-md-2">
          <img src="https://via.placeholder.com/150" alt="Product 5" />
        </div>
        <div class="col-6 col-md-2">
          <img src="https://via.placeholder.com/150" alt="Product 6" />
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Flipkart Clone</title>

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
      rel="stylesheet"
    />

    <style>
      .category img {
        width: 40px;
        height: 40px;
      }
      .dropdown-menu {
        min-width: 180px;
      }
      .dropdown-menu li {
        position: relative;
      }
      .dropdown:hover > .dropdown-menu {
        display: block;
      }
      .dropdown-menu .dropdown:hover > .dropdown-menu {
        display: block;
        top: 0;
        left: 100%;
      }
      .dropdown-toggle::after {
        margin-left: 5px;
      }
      .carousel-inner img {
        width: 100%;
        height: auto;
        object-fit: cover;
      }
      .carousel {
        margin-top: 20px;
      }
      .carousel-control-prev-icon,
      .carousel-control-next-icon {
        background-color: rgba(0, 0, 0, 0.5);
        border-radius: 50%;
      }
      .product-img {
        max-height: 160px;
        object-fit: contain;
        transition: transform 0.3s ease;
      }
      .hover-card:hover .product-img {
        transform: scale(1.05);
      }
      .hover-card {
        transition: box-shadow 0.3s ease;
      }
      .hover-card:hover {
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        cursor: pointer;
      }
    </style>
  </head>
  <body class="bg-light">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm px-3">
      <a class="navbar-brand fw-bold text-primary" href="/">Flipkart</a>
      <div class="collapse navbar-collapse">
        <form class="d-flex w-50 mx-3">
          <input
            class="form-control me-2"
            type="search"
            placeholder="Search for Products, Brands and More"
          />
        </form>
        <ul class="navbar-nav ms-auto">
          <li class="nav-item dropdown">
            <a
              class="nav-link dropdown-toggle d-flex align-items-center"
              href="#"
              id="userDropdown"
              role="button"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              <i class="bi bi-person-circle me-1"></i> Shubham
            </a>
            <ul
              class="dropdown-menu dropdown-menu-end"
              aria-labelledby="userDropdown"
            >
              <li><a class="dropdown-item" href="#">Profile</a></li>
              <li><a class="dropdown-item" href="#">Logout</a></li>
            </ul>
          </li>
          <li class="nav-item">
            <a class="nav-link d-flex align-items-center" href="#">
              <i class="bi bi-cart4 me-1"></i> Cart
            </a>
          </li>
        </ul>
      </div>
    </nav>

    <!-- Category Section -->
    <div class="container py-3 bg-white shadow-sm rounded mb-4">
      <div class="row text-center align-items-center">
        <% catData?.forEach(cat => { %>
        <div class="col dropdown">
          <button
            class="btn dropdown-toggle d-flex align-items-center justify-content-center gap-2"
            type="button"
            data-bs-toggle="dropdown"
          >
            <img
              src="/<%= cat.image || 'https://via.placeholder.com/40' %>"
              alt="<%= cat.name %>"
              width="50px"
            />
            <div><%= cat.name %></div>
          </button>
          <ul class="dropdown-menu">
            <% const relatedSubs = subData?.filter(sub =>
            sub.categoryId?.toString() === cat._id?.toString()); %> <%
            relatedSubs?.forEach(sub => { %>
            <li class="dropdown">
              <a
                class="dropdown-item text-decoration-none"
                href="/subcategory/<%= sub._id %>"
                ><%= sub.name %></a
              >
            </li>
            <% }) %>
          </ul>
        </div>
        <% }) %>
      </div>
    </div>

    <!-- Carousel -->
    <div
      id="mainCarousel"
      class="carousel slide my-4"
      data-bs-ride="carousel"
      data-bs-interval="3000"
    >
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img
            src="https://rukminim1.flixcart.com/fk-p-flap/1620/270/image/ac303d31c766a1be.jpeg?q=90"
            class="d-block w-100"
            alt="Slide 1"
          />
        </div>
        <div class="carousel-item">
          <img
            src="https://rukminim1.flixcart.com/fk-p-flap/1620/270/image/66b29ac6e4fc9119.jpg?q=90"
            class="d-block w-100"
            alt="Slide 2"
          />
        </div>
        <div class="carousel-item">
          <img
            src="https://rukminim1.flixcart.com/fk-p-flap/1620/270/image/1ae85669911e6862.jpeg?q=90"
            class="d-block w-100"
            alt="Slide 3"
          />
        </div>
        <div class="carousel-item">
          <img
            src="https://rukminim1.flixcart.com/fk-p-flap/1620/270/image/7850424b771b8f98.jpg?q=90"
            class="d-block w-100"
            alt="Slide 4"
          />
        </div>
      </div>
      <button
        class="carousel-control-prev"
        type="button"
        data-bs-target="#mainCarousel"
        data-bs-slide="prev"
      >
        <span class="carousel-control-prev-icon"></span>
      </button>
      <button
        class="carousel-control-next"
        type="button"
        data-bs-target="#mainCarousel"
        data-bs-slide="next"
      >
        <span class="carousel-control-next-icon"></span>
      </button>
    </div>

    <!-- Product Cards -->
     <div class="container">
       <h3>All Products</h3>
     </div>
    <div class="container py-3">
      <div class="row">
        <% extraData.forEach(extra => { %>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
          <div class="card h-100 shadow-sm border-0 hover-card">
            <div
              class="p-3 d-flex align-items-center justify-content-center"
              style="height: 200px; background-color: #f8f9fa"
            >
              <img
                src="/uploads/<%= extra.image || 'default-image.jpg' %>"
                alt="<%= extra.name %>"
                class="img-fluid product-img"
              />
            </div>
            <div class="card-body text-center">
              <h6 class="card-title fw-bold text-dark mb-1">
                <%= extra.name %>
              </h6>

              <!-- Price -->
              <p class="text-success fw-semibold mb-1">
                ₹ <%= extra.price || "999" %>
              </p>

              <!-- Star stars -->
              <div class="mb-2">
                <% const stars = extra.stars || 4; for (let i = 1; i <= 5;
                i++) { %> <% if (i <= stars) { %>
                <i class="bi bi-star-fill text-warning"></i>
                <% } else { %>
                <i class="bi bi-star text-warning"></i>
                <% } %> <% } %>
              </div>

              <a
                href="/product/<%= extra._id %>"
                class="btn btn-outline-primary btn-sm"
                >View Product</a
              >
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>


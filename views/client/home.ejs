<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Flipkart Clone</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      .category img {
        width: 40px;
        height: 40px;
      }
      .banner {
        background: #1976d2;
        color: white;
        padding: 40px 20px;
        text-align: center;
        position: relative;
      }
      .banner img {
        max-height: 300px;
      }
      .electronics img {
        width: 100%;
        max-height: 150px;
        object-fit: contain;
      }
    </style>
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light px-3">
      <a class="navbar-brand fw-bold text-primary" href="#">Flipkart</a>
      <div class="collapse navbar-collapse">
        <form class="d-flex w-50 mx-3">
          <input
            class="form-control me-2"
            type="search"
            placeholder="Search for Products, Brands and More"
          />
        </form>
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="#">Shubham</a></li>
          <li class="nav-item"><a class="nav-link" href="#">Cart</a></li>
          <li class="nav-item">
            <a class="nav-link" href="#">Become a Seller</a>
          </li>
        </ul>
      </div>
    </nav>

    <!-- Categories with Multi-Level Dropdown -->
    <div class="container-fluid bg-white py-3">
      <div class="row text-center align-items-center">
        <div class="col category">
          <img src="https://via.placeholder.com/40" alt="" />
          <div>Kilos</div>
        </div>
        <div class="col category">
          <img src="https://via.placeholder.com/40" alt="" />
          <div>Mobiles</div>
        </div>
        <div class="col">
          <!-- Multi-level dropdown for Fashion -->
          <div class="dropdown">
            <button
              class="btn btn-light dropdown-toggle w-100"
              type="button"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              <img src="https://via.placeholder.com/40" alt="" />
              <div>Fashion</div>
            </button>
            <ul class="dropdown-menu">
              <li class="dropdown dropend">
                <a
                  class="dropdown-item dropdown-toggle"
                  href="#"
                  data-bs-toggle="dropdown"
                  >Men's Top Wear</a
                >
                <ul class="dropdown-menu">
                  <li><a class="dropdown-item" href="#">T-Shirts</a></li>
                  <li><a class="dropdown-item" href="#">Casual Shirts</a></li>
                  <li><a class="dropdown-item" href="#">Formal Shirts</a></li>
                </ul>
              </li>
              <li class="dropdown dropend">
                <a
                  class="dropdown-item dropdown-toggle"
                  href="#"
                  data-bs-toggle="dropdown"
                  >Men's Bottom Wear</a
                >
                <ul class="dropdown-menu">
                  <li><a class="dropdown-item" href="#">Jeans</a></li>
                  <li><a class="dropdown-item" href="#">Trackpants</a></li>
                </ul>
              </li>
              <li><a class="dropdown-item" href="#">Women Ethnic</a></li>
              <li><a class="dropdown-item" href="#">Men Footwear</a></li>
            </ul>
          </div>
        </div>
        <div class="col category">
          <img src="https://via.placeholder.com/40" alt="" />
          <div>Electronics</div>
        </div>
        <div class="col category">
          <img src="https://via.placeholder.com/40" alt="" />
          <div>Home & Furniture</div>
        </div>
        <div class="col category">
          <img src="https://via.placeholder.com/40" alt="" />
          <div>Appliances</div>
        </div>
        <div class="col category">
          <img src="https://via.placeholder.com/40" alt="" />
          <div>Flight Bookings</div>
        </div>
        <div class="col category">
          <img src="https://via.placeholder.com/40" alt="" />
          <div>Beauty & More</div>
        </div>
        <div class="col category">
          <img src="https://via.placeholder.com/40" alt="" />
          <div>Two Wheelers</div>
        </div>
      </div>
    </div>

    <!-- Carousel -->
    <div
      id="mainCarousel"
      class="carousel slide my-4"
      data-bs-ride="carousel"
      data-bs-interval="3000"
    >
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img
            src="https://rukminim1.flixcart.com/fk-p-flap/1620/270/image/ac303d31c766a1be.jpeg?q=90"
            class="d-block w-100"
            alt="Slide 1"
          />
        </div>
        <div class="carousel-item">
          <img
            src="https://rukminim1.flixcart.com/fk-p-flap/1620/270/image/66b29ac6e4fc9119.jpg?q=90"
            class="d-block w-100"
            alt="Slide 2"
          />
        </div>
        <div class="carousel-item">
          <img
            src="https://rukminim1.flixcart.com/fk-p-flap/1620/270/image/1ae85669911e6862.jpeg?q=90"
            class="d-block w-100"
            alt="Slide 3"
          />
        </div>
        <div class="carousel-item">
          <img
            src="https://rukminim1.flixcart.com/fk-p-flap/1620/270/image/7850424b771b8f98.jpg?q=90"
            class="d-block w-100"
            alt="Slide 4"
          />
        </div>
      </div>
      <button
        class="carousel-control-prev"
        type="button"
        data-bs-target="#mainCarousel"
        data-bs-slide="prev"
      >
        <span class="carousel-control-prev-icon"></span>
      </button>
      <button
        class="carousel-control-next"
        type="button"
        data-bs-target="#mainCarousel"
        data-bs-slide="next"
      >
        <span class="carousel-control-next-icon"></span>
      </button>
    </div>

    <!-- Electronics Section -->
    <div class="container my-4">
      <h4 class="mb-3">Best of Electronics</h4>
      <div class="row text-center electronics">
        <div class="col-6 col-md-2">
          <img src="https://via.placeholder.com/150" alt="Product 1" />
        </div>
        <div class="col-6 col-md-2">
          <img src="https://via.placeholder.com/150" alt="Product 2" />
        </div>
        <div class="col-6 col-md-2">
          <img src="https://via.placeholder.com/150" alt="Product 3" />
        </div>
        <div class="col-6 col-md-2">
          <img src="https://via.placeholder.com/150" alt="Product 4" />
        </div>
        <div class="col-6 col-md-2">
          <img src="https://via.placeholder.com/150" alt="Product 5" />
        </div>
        <div class="col-6 col-md-2">
          <img src="https://via.placeholder.com/150" alt="Product 6" />
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
